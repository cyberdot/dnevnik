<article class="post-container post-container--single">
	<header class="post-header">
		<div class="post-meta">
			<time datetime="<%= @frontmatter.created %>" class="post-meta__date date">Posted on <%= @frontmatter.created %>.</time> &#8226; 
			<%= if length(@frontmatter.tags) > 0 do %>
			<span class="post-meta__tags">Tags:   
				<%= Enum.map(@frontmatter.tags, fn(tag) -> %>
					<a href="/tags/<%= tag %>.html"><%= tag %></a> 
				<% end) %>
        	</span>
			<% end %>	
		</div>
		<h1 class="post-title"><%= @frontmatter.title %></h1>
	</header>

	<section class="post">
		<%= @content %>
	</section>
	
	<%= if @config.enable_disqus_comments do %>
		<%= Dnevnik.DisqusComments.render(@path, @config.disqus_url) %>	 
	<% end %>

</article>

