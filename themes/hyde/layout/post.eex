<div class="post">
	<h1><%= @frontmatter.title %></h1>
	<span class="post-date"><%= Dnevnik.Utils.Date.formatted(@frontmatter.created, @config.date_format) %></span>
	<%= @content %>
</div>

<%= if @config.enable_disqus_comments do %>
	<%= Dnevnik.DisqusComments.render(@path, @config.disqus_url) %>	 
<% end %>

